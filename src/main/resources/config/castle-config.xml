<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	   		http://www.springframework.org/schema/context
	   		http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:property-placeholder location="classpath:castle.properties"/>

    <bean id="zamek" class="com.kamiljurczak.middle_ages_knights.domain.Castle" init-method="build" destroy-method="tearDown">
        <constructor-arg index="0" ref="lancelot"/>
        <property name="name" value="${my.castle.name}"/>
    </bean>
    <bean id="turniej" class="com.kamiljurczak.middle_ages_knights.domain.Tournament">
        <property name="knight" ref="percival"/>
    </bean>
</beans>